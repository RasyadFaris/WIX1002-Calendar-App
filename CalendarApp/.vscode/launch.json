    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launcher",
            "request": "launch",
            "mainClass": "Launcher",
            "vmArgs": "--module-path \"${workspaceFolder}/lib/lib\" --add-modules javafx.controls,javafx.base,javafx.fxml,javafx.graphics,javafx.media,javafx.web"

        },
        {
            "type": "java",
            "name": "App",
            "request": "launch",
            "mainClass": "view.App",
            "vmArgs": "--module-path \"${workspaceFolder}/lib/lib\" --add-modules javafx.controls,javafx.base,javafx.fxml,javafx.graphics,javafx.media,javafx.web --enable-native-access=javafx.graphics"
        }
    ]
}